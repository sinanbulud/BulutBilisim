

@{
    ViewBag.Title = "UyeGiris";
}
<br /> <br /><br /> <br />

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@using (Ajax.BeginForm("UyeGiris", "Uye", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divSonuc" }, new { id = "formGenel" }))
{
    <div class="container">
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2"><span class="form-control-static">Email</span></div>
                <div class="col-md-6"><input class="form-control" id="Email" name="Email" type="text" placeholder="email adresinizi giriniz..." /></div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2"><span class="form-control-static">Şifre</span></div>
                <div class="col-md-6"><input class="form-control" id="Sifre" name="Sifre" type="password" placeholder="şifrenizi giriniz..." /></div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
                <div class="col-md-6"><input class="btn btn-default" id="btnGiris" type="submit" value="Giriş" /></div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
                <div class="col-md-6 text-danger" id="divSonuc"></div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <br /> <br /><br /> <br /><br /> <br /><br /> <br />
    </div>
}

